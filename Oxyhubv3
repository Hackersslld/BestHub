-- Boot the Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create the Main Window
local Window = Rayfield:CreateWindow({
   Name = "OxyHub",
   LoadingTitle = "Loading OxyHub",
   LoadingSubtitle = "Scripting Made Easy",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "OxyHub", -- Custom folder name
      FileName = "Config"
   },
   Discord = {
      Enabled = false,
      Invite = "noinvitelink",
      RememberJoins = true
   },
   KeySystem = true,
   KeySettings = {
      Title = "Access Key",
      Subtitle = "Enter your key",
      Note = "Get your key from our website",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"YourKey"} -- Replace "YourKey" with your actual key
   }
})

-- Create Tabs for Different Sections
local HomeTab = Window:CreateTab("Home", 4483362458)
local ScriptsTab = Window:CreateTab("Scripts", 4483362458)
local ChangelogTab = Window:CreateTab("Changelog", 4483362458)

-- Ensure Changelog Tab is created correctly
if ChangelogTab then
    -- Add Sections and Elements to Changelog Tab
    ChangelogTab:CreateSection("Latest YouTube Video")
    ChangelogTab:CreateLabel("Check out our latest YouTube video:")
    ChangelogTab:CreateButton({
        Name = "Watch Latest Video",
        Callback = function()
            -- Open the latest YouTube video
            -- Replace the URL with the actual latest video URL
            local youtubeVideoURL = "https://www.youtube.com/watch?v=dhoUzl_Sw-A" -- Replace YOUR_VIDEO_ID with the actual ID
            print("Opening YouTube video: " .. youtubeVideoURL)
            -- You might use an in-game browser or a link opener here if supported
        end
    })
else
    print("Failed to create Changelog tab.")
end

-- Add Sections and Elements to Home Tab
HomeTab:CreateLabel("Welcome to OxyHub!")
HomeTab:CreateLabel("News: Check out the latest updates!")
HomeTab:CreateSection("Server Status")

-- Add server status with visual indicators
HomeTab:CreateLabel("ðŸŸ¢ Server 1: Online")
HomeTab:CreateLabel("ðŸŸ¢ Server 2: Online")
HomeTab:CreateLabel("ðŸŸ¢ Database: Online")

HomeTab:CreateSection("Other")
HomeTab:CreateButton({
    Name = "GitHub",
    Callback = function()
        -- Open GitHub repository link
        print("Opening GitHub...")
    end
})

-- Function to unload the UI
local function UnloadUI()
    Rayfield:Destroy() -- Unloads the Rayfield UI
end

