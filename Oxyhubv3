-- Boot the Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create the Main Window
local Window = Rayfield:CreateWindow({
   Name = "OxyHub",
   LoadingTitle = "Loading OxyHub",
   LoadingSubtitle = "Scripting Made Easy",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "YourHub", -- Custom folder name
      FileName = "Config"
   },
   Discord = {
      Enabled = false,
      Invite = "noinvitelink",
      RememberJoins = true
   },
   KeySystem = true, -- Key system enabled
   KeySettings = {
      Title = "Access Key",
      Subtitle = "Enter your key",
      Note = "Get your key from our website",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"YourKey"} -- Use the correct key
   }
})

-- Create Tabs for Different Sections
local HomeTab = Window:CreateTab("Home", 4483362458)
local ScriptsTab = Window:CreateTab("Scripts", 4483362458)
local NewsTab = Window:CreateTab("News", 4483362458)
local UpdatesTab = Window:CreateTab("Updates", 4483362458)
local SupportTab = Window:CreateTab("Support", 4483362458)

-- Home Tab
HomeTab:CreateLabel("Welcome to OxyHub!")
HomeTab:CreateSection("Server Status")
HomeTab:CreateLabel("Server 1: Online", Color3.fromRGB(0, 255, 0)) -- Green circle can be added via UI
HomeTab:CreateLabel("Server 2: Online", Color3.fromRGB(0, 255, 0))
HomeTab:CreateSection("Other")
HomeTab:CreateButton({
    Name = "Visit GitHub",
    Callback = function()
        -- Open GitHub repository link
        print("Opening GitHub...")
    end
})

-- Scripts Tab
local ScriptsSection = ScriptsTab:CreateSection("Game Scripts")
ScriptsSection:CreateButton({
    Name = "Adopt Me!",
    Callback = function()
        loadstring(game:HttpGet("https://egorikusa.space/271ee1956d4b196c73150e64.lua", true))()
    end
})
ScriptsSection:CreateButton({
    Name = "Bloxburg",
    Callback = function()
        loadstring(game:HttpGet("https://vedrox.com/data/scripts/free/script.lua"))()
    end
})
ScriptsSection:CreateButton({
    Name = "Piggy",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/DFDERD41/autofarms-2-game/main/piggynoob", true))()
    end
})
ScriptsSection:CreateButton({
    Name = "Arsenal",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/tbao143/thaibao/main/TbaoHubArsenal"))()
    end
})
ScriptsSection:CreateButton({
    Name = "JailBreak",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/BlitzIsKing/UniversalFarm/main/Loader/Regular"))()
    end
})

-- Updates Tab
local UpdatesSection = UpdatesTab:CreateSection("Update Logs")
UpdatesSection:CreateLabel("ðŸ†• Added Adopt Me!", Color3.fromRGB(255, 255, 255)) -- Example of update log
UpdatesSection:CreateLabel("ðŸ†• Added Bloxburg!", Color3.fromRGB(255, 255, 255)) -- Example of update log

-- Support Tab
local SupportSection = SupportTab:CreateSection("Support")
SupportSection:CreateLabel("Frequently Asked Questions (FAQ)")
SupportSection:CreateLabel("1. How do I use the scripts?")
SupportSection:CreateLabel("   - Click on a game script and follow the instructions.")
SupportSection:CreateLabel("2. How do I get a key?")
SupportSection:CreateLabel("   - Obtain your key from our official website.")
SupportSection:CreateLabel("Contact Us:")
SupportSection:CreateLabel("For further assistance, reach out to our support team via email at support@oxyhub.com.")

-- Example of a Notification
Rayfield:Notify({
    Title = "Welcome",
    Content = "Thank you for using OxyHub!",
    Duration = 5,
    Image = 4483362458,
    Actions = {
        Ignore = {
            Name = "Okay!",
            Callback = function()
                print("The user tapped Okay!")
            end
        }
    }
})

-- Example of an Input Box in Home Tab
local Input = HomeTab:CreateInput({
    Name = "Enter Your Name",
    PlaceholderText = "Type your name here...",
    Callback = function(Text)
        print("User entered: " .. Text)
    end,
})

